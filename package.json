{
  "name": "formbricks",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database/schema.prisma"
  },
  "scripts": {
    "clean": "turbo run clean && rimraf node_modules .turbo coverage out",
    "clean-install": "pnpm run clean && echo \"allowing file watchers watching files...\" && sleep 5 && pnpm i",
    "build": "turbo run build",
    "build:dev": "turbo run build:dev",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:start": "turbo run db:start",
    "db:push": "turbo run db:push",
    "db:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.dev.yml down",
    "go": "echo 'this is overloaded' && pnpm db:up && pnpm turbo:go",
    "go:nodb": "pnpm turbo:go",
    "dev": "turbo run dev --parallel",
    "start": "pnpm turbo:start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "release": "turbo run build --filter=@formbricks/js... && changeset publish",
    "test": "turbo run test --no-cache",
    "test:coverage": "turbo run test:coverage --no-cache",
    "test:e2e": "playwright test",
    "test-e2e:azure": "pnpm test:e2e -c playwright.service.config.ts --workers=20",
    "turbo:go": "turbo run go --concurrency 20",
    "turbo:dev": "pnpm turbo:dev",
    "turbo:start": "turbo run start --parallel",
    "storybook": "turbo run storybook",
    "fb-migrate-dev": "pnpm --filter @formbricks/database create-migration && pnpm prisma generate",
    "tolgee-pull": "BRANCH_NAME=$(node -p \"require('./branch.json').branchName\") && tolgee pull --tags \"draft:$BRANCH_NAME\" \"production\" && prettier --write ./apps/web/locales/*.json"
  },
  "devDependencies": {
    "@azure/microsoft-playwright-testing": "1.0.0-beta.7",
    "@formbricks/eslint-config": "workspace:*",
    "@playwright/test": "1.52.0",
    "eslint": "8.57.0",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "rimraf": "6.0.1",
    "tsx": "4.19.4",
    "turbo": "2.5.3"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "packages/database/schema.prisma": [
      "prisma format"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@9.15.9",
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
